

<h3>ProductDisplay</h3>
<div class="card w-25">
    <div class="card-body">
        <h5 class="card-title">@Product.Name</h5>
        <p class="card-text">@Product.Description</p>
        <blockquote class="card-text">$@Product.Price</blockquote>
    </div>
</div>

@code {
    [EditorRequired] //will enforce whenever this component is used, the component user must provide the Product parameter data.
    [Parameter]  // parameter (input data) to the component
    public Product Product { get; set; } = new();

}
